<%= render "navbar" %>

<div class="container w-50">
  <div class="container-banner d-flex flex-column align-items-center justify-content-center">
    <h1><%= @cocktail.name %></h1>
    <h2>Cocktail Details</h2>
  </div>

  <div>
    <% cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  </div>

  <div class="container-list">
    <% @cocktail.doses.each do |dose| %>
      <p>
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to dose_path(dose.id), method: :delete do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </p>
    <% end %>

    <p class="button"><%= link_to "Add Ingredients and amounts", new_cocktail_dose_path(@cocktail) %></p>

    <p class="button"><%= link_to "Back to list", cocktails_path %></p>
  </div>

</div>
